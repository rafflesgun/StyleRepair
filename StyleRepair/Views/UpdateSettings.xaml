<Window x:Class="Michmela44.StyleRepair.Views.UpdateSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Update StyleRepair Settings" Height="183" Width="541"
        ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
  <Grid>
    <Label Content="Company Name" Height="28" HorizontalAlignment="Left" Margin="10,14,0,0" Name="label1"
           VerticalAlignment="Top" />
    <TextBox Height="23" Margin="121,14,12,0" Name="companyName" VerticalAlignment="Top" />
    <Label Content="Copyright Message" Height="28" HorizontalAlignment="Left" Margin="10,44,0,0" Name="label2"
           VerticalAlignment="Top" />
    <TextBox Height="23" Margin="121,44,12,0" Name="copyrightMessage" VerticalAlignment="Top" />
    <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="232,99,0,0" Name="saveSettings"
            VerticalAlignment="Top" Width="75" Click="saveSettings_Click" />
    <CheckBox Content="Use Regions with NArrange to fix SA1200-SA1207" Height="16" HorizontalAlignment="Left"
              Margin="12,78,0,0" VerticalAlignment="Top" Width="495" Name="RegionsCheck" />
  </Grid>
</Window>